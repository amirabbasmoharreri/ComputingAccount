<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_insetEdge="start">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <Button
        android:id="@+id/button_settings_backup"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end|center_vertical"
        android:background="@drawable/ic_folder_24dp"
        android:backgroundTint="?attr/special_button_color"
        android:clickable="true"
        android:focusable="true"
        android:elevation="5dp"
        android:translationZ="5dp"
        android:layout_marginEnd="20dp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_title_address_settings_backup"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="@string/textView_address"
        android:textSize="17dp"
        android:layout_marginStart="75dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_address_settings_backup"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_marginTop="10dp"
        android:layout_marginStart="75dp"
        android:maxLines="3"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/text_title_address_settings_backup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>