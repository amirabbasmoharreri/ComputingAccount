<resources>

    <!-- Base application theme. -->



    <!--  custom  Styles for dark components    -->


    <!--        dark  Activity no title     -->
    <style name="Dark_no_title_activity" parent="Dark_AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/dark_ColorPrimary</item>
    </style>




    <!--    dark Buttons       -->
    <style name="custom_dark_widget_button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/yellow_primary</item>
        <item name="android:backgroundTint">@color/dark_ColorPrimaryDark</item>
    </style>

    <!--     dark FloatingActionButton    -->
    <style name="custom_dark_floating_action_button" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/yellow_primary</item>
    </style>

    <!--    dark CheckBoxes      -->
    <style name="custom_dark_check_box" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white_primary</item>
        <item name="buttonTint">@color/yellow_primary</item>
    </style>

    <!--    dark Switch     -->
    <style name="custom_dark_switch" parent="Widget.AppCompat.CompoundButton.Switch">
    </style>


    <!--      dark popup menu      -->
    <style name="custom_dark_popup_menu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/dark_ColorPrimaryDark</item>
        <item name="android:itemBackground">@color/dark_ColorPrimaryDark</item>
    </style>


    <!--       dark AlertDialog       -->
    <style name="custom_dark_alert_dialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/yellow_primary</item>
        <item name="android:textColorPrimary">@color/white_primary</item>
        <item name="android:background">@color/dark_ColorPrimaryDark</item>
        <item name="android:colorAccent">@color/yellow_primary</item>
        <item name="buttonBarButtonStyle">@style/custom_dark_button_alert_dialog</item>
        <item name="android:textColorAlertDialogListItem">@color/white_primary</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>


    <!--     dark buttonBar of alertDialog      -->
    <style name="custom_dark_button_alert_dialog" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/yellow_primary</item>
    </style>



    <!--        dark Dialog         -->
    <style name="custom_dark_dialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/yellow_primary</item>
        <item name="android:textColorPrimary">@color/white_primary</item>
        <item name="android:textColorHint">@color/grey_primary</item>
        <item name="android:textColorSecondary">@color/grey_primary</item>
        <item name="editTextStyle">@style/custom_dark_edit_text</item>
        <item name="android:background">@color/dark_ColorPrimaryDark</item>
        <item name="buttonStyle">@style/custom_dark_widget_button</item>
        <item name="special_button_color">@color/yellow_primary</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="colorAccent">@color/yellow_primary</item>
    </style>



    <!--       dark EditText     -->
    <style name="custom_dark_edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/yellow_primary</item>
        <item name="android:textColorHint">@color/grey_primary</item>
    </style>



    <!--       dark AutoCompleteTextView       -->
    <style name="custom_dark_auto_complete_text_view" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/yellow_primary</item>
    </style>



    <!--       light NavigationView         -->
    <style name="custom_dark_navigation_view" parent="Widget.Design.BottomNavigationView">
        <item name="backgroundTint">@color/light_ColorPrimaryDark</item>
        <item name="itemTextColor">@color/yellow_primary</item>
        <item name="itemIconTint">@drawable/color_item_bottom_navigation_view</item>
    </style>


    <!--         Dark Theme            -->

    <style name="Dark_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!--      ActionBar      -->
        <item name="colorPrimary">@color/dark_ColorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_ColorPrimaryDark</item>
        <item name="titleTextColor">@color/yellow_primary</item>


        <!--     Background of Windows      -->
        <item name="android:windowBackground">@color/dark_ColorPrimary</item>


        <!--   TextViews     -->
        <item name="android:textColor">@color/white_primary</item>
        <item name="android:textColorHint">@color/grey_primary</item>
        <item name="android:textColorPrimary">@color/white_primary</item>
        <item name="android:textColorSecondary">@color/grey_primary</item>


        <!--    EditTexts      -->
        <item name="editTextStyle">@style/custom_dark_edit_text</item>


        <!--     AutoCompleteTextViews     -->
        <item name="autoCompleteTextViewStyle">@style/custom_dark_auto_complete_text_view</item>


        <!--    CardViews      -->
        <item name="special_card_view_color">@color/dark_ColorPrimaryDark</item>



        <!--    Buttons     -->
        <item name="buttonStyle">@style/custom_dark_widget_button</item>
        <item name="special_button_color">@color/yellow_primary</item>



        <!--     FloatingActionButtons     -->
        <item name="floatingActionButtonStyle">@style/custom_dark_floating_action_button</item>



        <!--    CheckBoxes    -->
        <item name="checkboxStyle">@style/custom_dark_check_box</item>



        <!--    Switches & ProgressBars    -->
        <item name="android:textColorPrimaryDisableOnly">@color/white_primary</item>
        <item name="colorAccent">@color/yellow_primary</item>


        <!--          popup menus        -->
        <item name="android:itemBackground">@color/dark_ColorPrimaryDark</item>


        <!--        dialogs           -->
        <item name="android:alertDialogTheme">@style/custom_dark_alert_dialog</item>
        <item name="android:dialogTheme">@style/custom_dark_dialog</item>


        <!--     CollapsingToolbarLayouts        -->
        <item name="CollapsingToolbarLayout_color">@color/dark_ColorPrimaryDark</item>


        <!--      NavigationViews          -->
        <item name="bottomNavigationStyle">@style/custom_dark_navigation_view</item>


        <!--        vectors       -->
        <item name="vector_color">@color/white_primary</item>
        <item name="vector_color_revers">@color/black_second</item>


        <!--      delete_button Color      -->
        <item name="delete_button_color">#950000</item>


        <!--        color of states BottomNavigationView's icon        -->
        <item name="selected_icon">@color/yellow_primary</item>
        <item name="non_selected_icon">@color/dark_ColorPrimaryDark</item>


        <!--    color of crave and debt card      -->
        <item name="crave_card_color">@color/blue_third</item>
        <item name="debt_card_color">@color/yellow_primary</item>


        <!--     color of table's background     -->
        <item name="table_background">@color/dark_ColorPrimaryDark</item>
        <item name="table_border_color">@color/yellow_primary</item>

    </style>
















