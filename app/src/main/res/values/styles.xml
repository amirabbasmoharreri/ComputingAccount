<resources>

    <!-- Base application theme. -->



    <!--         Dark Theme            -->

    <style name="Dark_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Background_screen</item>
        <item name="colorPrimaryDark">@color/Background_EditText</item>
        <item name="colorAccent">@color/Background_Button</item>
        <item name="android:textColorTertiary">@color/Background_Button</item>
        <item name="android:textColor">@color/Background_Button</item>

    </style>



    <!--         Light Theme            -->


    <style name="LightTheme_AppTheme" parent="Theme.AppCompat">

        <item name="colorPrimary">@color/me_white_2</item>
        <item name="colorPrimaryDark">@color/me_gray</item>
        <item name="colorAccent">@color/me_black</item>
        <item name="android:textColorTertiary">@color/me_black</item>
        <item name="android:textColor">@color/me_black</item>


    </style>







    <!--       Theme for Activity in dialog         -->

    <style name="ActivityDialog" parent="Base.Theme.AppCompat">
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="windowNoTitle">true</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@style/RtlOverlay.DialogWindowTitle.AppCompat</item>
        <item name="android:windowTitleBackgroundStyle">@style/Base.DialogWindowTitleBackground.AppCompat</item>
        <item name="android:windowBackground">@drawable/abc_dialog_material_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>

        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="listPreferredItemPaddingLeft">24dip</item>
        <item name="listPreferredItemPaddingRight">24dip</item>

        <item name="android:listDivider">@null</item>

        <item name="android:buttonBarStyle">@style/Widget.AppCompat.ButtonBar.AlertDialog</item>
        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>






    <!--       Theme for Activity without ui       -->


    <style name="NoDisplay_me" parent="Theme.AppCompat.Dialog">
        <item name="background">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>





    <!--         Theme for DialogBox           -->

    <style name="NoWindow" parent="Theme.AppCompat.Dialog">
        <item name="background">@android:color/transparent</item>
    </style>






    <!--      Theme for delete  ActionBar      -->

    <style name="Dark_AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>





    <!--        Theme for Toolbar          -->

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
