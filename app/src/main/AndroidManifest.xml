            android:screenOrientation="portrait"/>
        <activity android:name=".ItemsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/activity_title_settings"
            android:screenOrientation="portrait"/>
        <activity android:name=".CraveDebtActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ReceiveActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".PaidActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LoginActivity"
            android:label="@string/activity_title_main"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.speech.action.RECOGNIZE_SPEECH" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.settings.backup.BackUpAddress$MiddleActivity"
            tools:ignore="Instantiatable"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.settings.backup.BackUpRestoreButton$MiddleActivity"
            android:screenOrientation="portrait"/>


